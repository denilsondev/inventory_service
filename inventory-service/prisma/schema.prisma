// Inventory Service - Prisma schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model PerStoreInventory {
  storeId    String
  sku        String
  quantity   Int
  version    Int
  updatedAt  DateTime @default(now())

  @@id([storeId, sku])
  @@index([sku], name: "idx_inventory_sku")
}

model SeenEvent {
  eventId String @id
  createdAt DateTime @default(now())
}
