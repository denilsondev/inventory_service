generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model EstoquePorLoja {
  idLoja        String   
  sku           String   
  quantidade    Int      
  versao        Int      // Número da versão para controle de concorrência
  atualizadoEm  DateTime @default(now()) 

  @@id([idLoja, sku]) // Chave primária composta: loja + produto
  @@index([sku], name: "idx_estoque_sku") // Índice para consultas por produto
}


model EventoProcessado {
  idEvento  String   @id 
  criadoEm  DateTime @default(now()) 
}